<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="RegistosDiarios.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:RegistosDiarios"
       xmlns:views="clr-namespace:RegistosDiarios.Views"
       Shell.FlyoutBehavior="Flyout"
       Title="RegistosDiarios">

    <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" FlyoutItemIsVisible="False"/>
    <ShellContent Title="Registos Sono" ContentTemplate="{DataTemplate views:RegistoSono}" Route="RegistosSono" />
    <ShellContent Title="Sair" ContentTemplate="{DataTemplate local:MainPage}" Route="Logout" />

</Shell>
